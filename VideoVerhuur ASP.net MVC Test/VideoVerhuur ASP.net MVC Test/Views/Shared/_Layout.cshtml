    <div class="jumbotron page-header" style="margin-top: -50px; height:315px;">
        <div class="container">
            <img src="~/Images/videoVerhuur.jpg" class="img-responsive img-rounded" style="height: 200px; margin-top: -50px;" />
            @if (Session["klantNr"] == null)
             {
                <h2 font-weight:600">Eerst aanmelden om te kunnen huren</h2>
             }
            else
            {
                <h3>U bent ingelogd als @Session["klantNaam"] @Session["klantVoornaam"].</h3>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Uitloggen</a>
            }
                @if (Session.Keys.Count > 1)
            {
                <a href="@Url.Action("Afrekenen", "Home")" class="btn btn-primary">Afrekenen</a>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VideoVerhuur</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
