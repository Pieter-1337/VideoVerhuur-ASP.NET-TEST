@model List<VideoVerhuur_ASP.net_MVC_Test.Models.Genre>

@{
    ViewBag.Title = "VerhuurIndex";
}



<ul style="width: 100%; display: flex; justify-content:flex-start; list-style-type: none;">
    @foreach(var genre in Model)
    {
        <a href="@Url.Action("GenreDetail", "Home" , new { id = genre.GenreNr })" style="margin-left: 2.5%; color:black; cursor:pointer;" ><li style="font-size: 10px;">@genre.GenreSoort</li></a>
    }
</ul>

<hr />

<h3>
    Kies een genre
</h3>

@if (TempData["Error"] != null)
{
<div class="alert alert-danger">
    <h2>@TempData["Error"]</h2>
</div>
}