@model VideoVerhuur_ASP.net_MVC_Test.Models.AfrekenenModel
@{
    ViewBag.Title = "Afrekenen";
}

<h2>Afrekenen</h2>

<Table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Prijs</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var film in @Model.films)
        {
            <tr>
                <td>@Html.DisplayFor(m => film.Titel)</td>
                <td>@Html.DisplayFor(m => film.Prijs)</td>
               
            </tr>
        }
    </tbody>
</Table>
<p class="alert alert-info">Totaal: @(String.Format("{0:€ #,##0.00}", ViewBag.teBetalen))</p>

<p>Wordt gefactureerd aan:</p>
<p>@Model.klant.Naam @Model.klant.Voornaam</p>
<p>@Model.klant.Straat_Nr</p>
<p>@Model.klant.PostCode @Model.klant.Gemeente</p>

<div class="form-group">
    @Html.ActionLink("Bevestigen", "Index", "Home", new { Betaling = "U bestelling werd goed ontvangen" }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Terug naar mandje", "Mandje", "Home", null, new { @class = "btn btn-danger"})
</div>