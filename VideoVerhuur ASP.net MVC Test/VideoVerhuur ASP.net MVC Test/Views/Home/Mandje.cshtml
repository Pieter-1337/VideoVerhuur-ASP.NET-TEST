@model List<VideoVerhuur_ASP.net_MVC_Test.Models.Film>

@{
    ViewBag.Title = "Winkelmandje";
}

<h2>Mandje</h2>


<Table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Prijs</th>
            <th>Verwijderen</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var film in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => film.Titel)</td>
            <td>@Html.DisplayFor(m => film.Prijs)</td>
            <td><a href="@Url.Action("Verwijderen", "Home", new { id = film.BandNr})" class="btn btn-danger">Verwijderen</a></td>
        </tr>
    }
    </tbody>
</Table>
<p class="alert alert-info">Te betalen: @(String.Format("{0:€ #,##0.00}", ViewBag.teBetalen))</p>

<div class="form-group">
    @Html.ActionLink("Verder Winkelen", "VerhuurIndex", "Home", null, new { @class = "btn btn-primary" })
</div>


